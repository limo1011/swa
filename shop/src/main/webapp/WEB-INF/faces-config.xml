<?xml version="1.0"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
 <application>
  <locale-config>
   <default-locale>en</default-locale>
   <supported-locale>de</supported-locale>
  </locale-config>

  <resource-bundle>
   <base-name>de.shop.messages</base-name>
   <var>msg</var>
  </resource-bundle>
  
  <resource-bundle>
   <base-name>de.shop.kundenverwaltung.controller.messages</base-name>
   <var>msgKv</var>
  </resource-bundle>
  
  <resource-bundle>
   <base-name>de.shop.bestellverwaltung.controller.messages</base-name>
   <var>msgBv</var>
  </resource-bundle>
 
  <resource-bundle>
   <base-name>de.shop.artikelverwaltung.controller.messages</base-name>
   <var>msgAv</var>
  </resource-bundle>
  
  <resource-bundle>
   <base-name>de.shop.auth.controller.messages</base-name>
   <var>msgAuth</var>
  </resource-bundle>
 </application>
</faces-config>
